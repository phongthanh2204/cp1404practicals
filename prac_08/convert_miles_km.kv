BoxLayout:
    orientation: 'vertical'
    TextInput:
        id: input_miles
        text: '0'
        multiline: False
        font_size: 48
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'
        Button:
            text: 'Up'
            on_press: app.handle_increment(1)
        Button:
            text: 'Down'
            on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.convert()
    Label:
        id: output_km
        text: app.converted_km
        color: (1, 1, 0, 1) # yellow text
        font_size: 48
